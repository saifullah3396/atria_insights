{
    // hide directories here if there are too many to handle
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/**__pycache__": true,
        "**/**atria.egg-info": true,
        "**/**.pytest_cache": true,
        "**/**.mypy_cache": true,
        "**/**.venv": true,
        "**/**.htmlcov": true,
        "**/**.ruff_cache": true,
        "**/**.coverage": true,
        "**/**.gitignore": true,
        "**/**.gitmodules": false,
        "**/**uv.lock": true,
        ".copilot-docstring-instructions.md": true,
    },
    "python.analysis.indexing": true,
    "python.analysis.autoImportCompletions": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    "editor.trimAutoWhitespace": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [
        120
    ],
    "workbench.colorCustomizations": {
        // will change the color of three dots to red
        "editorHint.foreground": "#ff0000",
        // will underline the entire word with dots in your chosen color
        "editorHint.border": "#00ff66"
    },
    "notebook.output.textLineLimit": 200,
    "notebook.output.scrolling": false,
    "python.analysis.extraPaths": [
        "./src",
        "../atria_core/src/",
        "../atria_models/src/",
    ],
    "python.analysis.include": [
        "src/**/*.py",
        "../atria_core/src/**/*.py",
        "../atria_models/src/**/*.py",
    ],
    "python.defaultInterpreterPath": "./.venv/bin/python",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
}